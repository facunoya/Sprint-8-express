<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('./partials/head') %>
        <link rel="stylesheet" href="/css/groupStyle.css">
        <link rel="stylesheet" href="/css/errorForm.css">
        <title>Login</title>
</head>

<body>

    <main>
        <h1>Iniciar sesión</h1>
        <% if(locals.errors) { errors.forEach(err=> { %>
            <p style="color: rgb(236, 162, 50)">
                <%= err.msg %>
            </p>
            <% }); }%>
                <p style="color: rgba(236, 162, 50)">
                    <%=locals.mensaje ? locals.mensaje : "" %>
                </p>
        <form class="loginForm" action="/login" method="POST">
            <label for="">Correo</label>
            <br>
            <input class="loginEmail" type="email" name="email">
            <p class="emailErrors"></p>
            <br><br>
            <label for="">Contraseña</label>
            <br>
            <input class="loginPsw" type="password" name="password">
            <p class="loginPswErrors"></p>
            <br><br>
            <label for="">Recordarme</label>
            <input type="checkbox" name="remember" id="">
            <br><br>
            <input type="submit" value="Iniciar">
            <%- include("./partials/volver") %>
        </form>
        <script src="/js/loginValidations.js">

        </script>

    </main>
</body>

</html>